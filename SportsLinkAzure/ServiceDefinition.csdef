<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="SportsLinkAzure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="SportsLinkWeb" vmsize="ExtraSmall">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="HTTP" />
          <Binding name="Endpoint1" endpointName="HTTPS" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="HTTP" protocol="http" port="80" />
      <InputEndpoint name="HTTPS" protocol="https" port="443" certificate="SSLCERT" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Certificates>
      <Certificate name="SSLCERT" storeLocation="CurrentUser" storeName="My" />
    </Certificates>
  </WebRole>
</ServiceDefinition>